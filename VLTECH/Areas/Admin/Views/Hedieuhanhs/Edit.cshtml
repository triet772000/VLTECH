@model VLTECH.Models.Hedieuhanh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa hệ điều hành</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Mahdh)

    <div class="form-group">
        <b>@Html.LabelFor(model => model.Tenhdh, htmlAttributes: new { @class = "control-label col-md-2" })</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tenhdh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tenhdh, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div style="text-align: center;">
            <input type="submit" value="Save" class="btn btn-default" style="background-color: #179d02; color:#ffffff; text-decoration: none " />
            <div class="btn btn-default" style="background-color: #ff0000; text-decoration: none;">@Html.ActionLink("Back to List", "Index")</div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
