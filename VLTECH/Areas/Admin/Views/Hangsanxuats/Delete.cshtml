@model VLTECH.Models.Hangsanxuat

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xoá hãng sản xuất</h2>

<h3>Bạn có chắc chắn muốn xoá ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tenhang)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tenhang)
        </dd>

    </dl>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div style="text-align: center;">
                <input type="submit" value="Xoá" class="btn btn-default" style="background-color: #179d02; color:#ffffff; text-decoration: none " />
                <div class="btn btn-default" style="background-color: #ff0000; text-decoration: none;">@Html.ActionLink("Back to List", "Index")</div>
            </div>
        </div>
    }
</div>
